<?xml version="1.0" encoding="utf-8"?>

<ScrollView
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/main_layout"
        android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="@string/vehicleType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView31"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toStartOf="@+id/guideline9"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/guideline10"
                android:layout_marginStart="8dp"
        />
        <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:id="@+id/guideline9"
                                                    app:layout_constraintGuide_end="20dp"
                                                    android:orientation="vertical"/>
        <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:id="@+id/guideline10"
                                                    app:layout_constraintGuide_begin="20dp"
                                                    android:orientation="vertical"/>
        <Spinner
                android:layout_width="372dp"
                android:layout_height="50dp"
                android:background="@drawable/spinner_curved_rectangle_white"
                android:id="@+id/spinner_vehicle_Type"
                app:layout_constraintStart_toStartOf="@+id/guideline10"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline9"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView31"/>
        <TextView
                android:text="@string/str_vehiclePlateNo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView32"
                app:layout_constraintEnd_toStartOf="@+id/guideline9"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/guideline10"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/spinner_vehicle_Type"/>
        <EditText
                android:layout_width="356dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="@string/str_vehiclePlateNo"
                android:ems="10"
                android:background="@drawable/curved_rectangle_white"
                android:id="@+id/edt_vehicle_plate_no"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="@+id/guideline10" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline9"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView32"/>
        <TextView
                android:text="@string/str_vehicle_Licence"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/textView33"
                app:layout_constraintEnd_toStartOf="@+id/guideline9"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/guideline10"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/edt_vehicle_plate_no"/>
        <EditText
                android:layout_width="356dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="@string/str_vehicleLiceneceNo"
                android:ems="10"
                android:background="@drawable/curved_rectangle_white"
                android:id="@+id/edt_vehicle_licence_no"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline9"
                app:layout_constraintStart_toStartOf="@+id/guideline10" android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView33"/>
        <TextView
                android:text="@string/vehicle_brand"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/textView34"
                app:layout_constraintEnd_toStartOf="@+id/guideline9"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/guideline10"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/edt_vehicle_licence_no"/>
        <Spinner
                android:layout_width="372dp"
                android:layout_height="50dp"
                android:background="@drawable/spinner_curved_rectangle_white"
                android:id="@+id/spinner_brand"
                app:layout_constraintStart_toStartOf="@+id/guideline10"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline9"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView34"/>

        <TextView
                android:text="@string/vehicle_making_year"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/textView35"
                app:layout_constraintEnd_toStartOf="@+id/guideline9"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/guideline10"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/spinner_brand"/>
        <Spinner
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:background="@drawable/spinner_curved_rectangle_white"
                android:id="@+id/spinner_making_year"
                app:layout_constraintEnd_toStartOf="@+id/guideline9"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/guideline10"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView35"/>


        <TextView
                android:text="@string/vehicle_color"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/textView36"
                app:layout_constraintEnd_toStartOf="@+id/guideline9"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="@+id/guideline10" android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/spinner_making_year"/>
        <Spinner
                android:layout_width="372dp"
                android:layout_height="48dp"
                android:background="@drawable/spinner_curved_rectangle_white"
                android:id="@+id/spinner_color"

                app:layout_constraintStart_toStartOf="@+id/guideline10"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline9"
                android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView36"/>

        <TextView
                android:text="@string/vehicle_front_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView37"
                app:layout_constraintStart_toStartOf="@+id/guideline10"
                android:layout_marginStart="16dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/spinner_color"
        />


        <TextView
                android:text="@string/choose"
                android:layout_width="0dp"
                android:gravity="center|start"
                android:textSize="18sp"
                android:drawableEnd="@android:drawable/ic_menu_upload"
                android:background="@drawable/curved_rectangle_white"
                android:layout_height="50dp" android:id="@+id/choose_vehicle_frontPic"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/guideline10"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView37"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/textView39"
                  android:text="@string/vehicle_back_photo"
                  app:layout_constraintEnd_toStartOf="@+id/guideline9"
                  android:layout_marginEnd="16dp" android:layout_marginTop="8dp"
                  app:layout_constraintTop_toBottomOf="@+id/spinner_color"
        />

        <TextView android:layout_width="0dp" android:layout_height="50dp"
                  android:gravity="center|start"
                  android:textSize="18sp"
                  android:id="@+id/choose_vehicle_back_photo"
                  android:text="@string/choose"
                  android:drawableEnd="@android:drawable/ic_menu_upload"
                  android:background="@drawable/curved_rectangle_white"
                  android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline9"
                  app:layout_constraintBaseline_toBaselineOf="@+id/choose_vehicle_frontPic"/>

        <Button android:layout_width="324dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="@string/hint_save"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:id="@+id/save_button"
                android:background="@drawable/curved_rectangle_theme"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/guideline10"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline9"
                app:layout_constraintHorizontal_bias="0.497" app:layout_constraintTop_toBottomOf="@+id/image_front"
                android:layout_marginTop="16dp"/>
        <ImageView
                android:layout_width="150dp"
                android:layout_height="70dp" app:srcCompat="@drawable/car_back_img"
                android:id="@+id/image_back"
                android:scaleType="fitCenter"
                android:background="@drawable/curved_rectangle_transparent"
                app:layout_constraintTop_toTopOf="@+id/image_front"
                app:layout_constraintBottom_toBottomOf="@+id/image_front"
                app:layout_constraintEnd_toStartOf="@+id/guideline9" android:layout_marginEnd="8dp"/>
        <ImageView
                android:layout_width="150dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/car_front_img"
                android:id="@+id/image_front"
                android:scaleType="fitCenter"
                android:background="@drawable/curved_rectangle_transparent"
                app:layout_constraintStart_toStartOf="@+id/guideline10"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/choose_vehicle_frontPic"/>




    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>