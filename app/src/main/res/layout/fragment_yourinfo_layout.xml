<?xml version="1.0" encoding="utf-8"?>

<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:id="@+id/main_scroll"
        android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/img"
                android:id="@+id/profile_pic"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline8"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="@+id/guideline7"
                android:layout_marginStart="8dp"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/pencil_edit"
                android:id="@+id/edit_profile_pic"
                app:layout_constraintBottom_toBottomOf="@+id/profile_pic"
                app:layout_constraintStart_toStartOf="@+id/profile_pic"
                app:layout_constraintTop_toTopOf="@+id/profile_pic"
                app:layout_constraintEnd_toEndOf="@+id/profile_pic"
                app:layout_constraintHorizontal_bias="0.896"
                app:layout_constraintVertical_bias="0.857"
                android:layout_marginStart="24dp" android:layout_marginTop="24dp"/>
        <TextView
                android:text="@string/hint_full_name"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:id="@+id/textView22"
                app:layout_constraintStart_toStartOf="@+id/guideline7"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/profile_pic"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/edt_driver_name"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:inputType="textPersonName"
                android:hint="@string/user_name"
                android:ems="10"
                android:id="@+id/edt_driver_name"
                android:background="@drawable/curved_rectangle_white"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/textView23" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline8"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/guideline7"/>
        <TextView
                android:hint="@string/hint_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView23"
                app:layout_constraintStart_toStartOf="@+id/guideline7" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="348dp"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/edt_driver_email"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:hint="@string/useremail"
                android:background="@drawable/curved_rectangle_white"
                android:id="@+id/edt_driver_email"
                app:layout_constraintStart_toStartOf="@+id/guideline7" android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline8"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/textView27"/>
        <TextView
                android:text="@string/hint_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView27"
                app:layout_constraintStart_toStartOf="@+id/guideline7" android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/edt_driver_phone_no"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:hint="@string/phone_no"
                android:ems="10"
                android:background="@drawable/curved_rectangle_white"
                android:id="@+id/edt_driver_phone_no" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="@+id/guideline7"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline8"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/textView4"/>
        <TextView
                android:text="@string/hint_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView28"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/edt_address"
                app:layout_constraintStart_toStartOf="@+id/guideline7" android:layout_marginStart="8dp"/>
        <TextView
                android:text="Zip Code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                app:layout_constraintEnd_toStartOf="@+id/guideline8"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/guideline7"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/edit_zip_code"/>
        <EditText
                android:layout_width="198dp"
                android:layout_height="50dp"
                android:inputType="textPersonName"
                android:hint="Zip Code"
                android:ems="10"
                android:background="@drawable/curved_rectangle_white"
                android:id="@+id/edit_zip_code"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="@+id/guideline7"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/textView28"
                app:layout_constraintEnd_toStartOf="@+id/varify_zip_btn"
        />
        <EditText
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:inputType="textPersonName"
                android:hint="@string/user_address"
                android:ems="10"
                android:background="@drawable/curved_rectangle_white"
                android:id="@+id/edt_address"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/textView29" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline8"
                app:layout_constraintStart_toStartOf="@+id/guideline7" android:layout_marginStart="8dp"/>
        <TextView
                android:text="@string/hint_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView29"
                app:layout_constraintBottom_toTopOf="@+id/text_state"
                app:layout_constraintStart_toStartOf="@+id/guideline7" android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:gravity="center|start"
                android:textSize="18sp"
                android:id="@+id/text_state"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/guideline7"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline8"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/textView6"
                android:background="@drawable/curved_rectangle_white" android:hint="@string/hint_state"
                android:singleLine="false"/>
        <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content" android:id="@+id/guideline7"
                                                    app:layout_constraintGuide_begin="20dp"
                                                    android:orientation="vertical"/>
        <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content" android:id="@+id/guideline8"
                                                    app:layout_constraintGuide_end="20dp"
                                                    android:orientation="vertical"/>
        <Button
                android:text="Verify"
                android:background="@drawable/curved_rectangle_theme"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/varify_zip_btn" app:layout_constraintStart_toEndOf="@+id/edit_zip_code"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline8"
                android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/textView28"/>
        <TextView
                android:text="City"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView6" app:layout_constraintStart_toStartOf="@+id/guideline7"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline8"
                android:layout_marginEnd="8dp" app:layout_constraintBottom_toTopOf="@+id/text_city"
                android:layout_marginBottom="8dp"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:inputType="textPersonName"
                android:hint="@string/hint_city"
                android:ems="10"
                android:textSize="18sp"
                android:gravity="center|start"
                android:id="@+id/text_city" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="@+id/guideline7" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline8" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/save_button"
                android:background="@drawable/curved_rectangle_white"/>
        <Button
                android:text="Continue"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:background="@drawable/curved_rectangle_theme"
                android:layout_width="0dp"

                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_24dp"
                android:id="@+id/save_button" app:layout_constraintStart_toStartOf="@+id/guideline7"
                app:layout_constraintEnd_toStartOf="@+id/guideline8"
                app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>