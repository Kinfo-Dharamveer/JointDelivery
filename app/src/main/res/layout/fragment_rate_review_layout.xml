<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:background="#000"
        android:layout_gravity="center"

        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="75dp"
            app:cardElevation="3dp"
            android:id="@+id/cardView2"
            app:layout_constraintEnd_toEndOf="@+id/cardView" app:layout_constraintStart_toStartOf="@+id/cardView"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/guideline21">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent" app:srcCompat="@drawable/profile_img"
                tools:layout_editor_absoluteY="163dp" tools:layout_editor_absoluteX="165dp"
                android:id="@+id/imageView13"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/cardView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/space" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline22">


        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent" android:layout_height="match_parent">


            <TextView
                    android:text="Jamel Deere"
                    app:layout_goneMarginTop="24dp"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_18_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView70"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="70dp" app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:text="3048 clock hill "
                    android:drawableLeft="@android:drawable/ic_lock_idle_alarm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView73"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView70"
                    android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
            <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:id="@+id/view7" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toEndOf="parent" android:background="@color/green_dark"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView73"/>
            <TextView
                    android:text="Rate your customer"
                    android:layout_margin="@dimen/dimen_12_dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView74"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/view7"/>
            <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_12_dp"
                    android:id="@+id/ratingBar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView74"/>
            <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp" android:id="@+id/view8"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toEndOf="parent" android:background="@color/green_dark"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/ratingBar"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_margin="@dimen/dimen_12_dp"
                    android:layout_height="wrap_content" android:id="@+id/textView75"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view8"/>
            <Button
                    android:textColor="@android:color/white"
                    android:text="Complete order"
                    android:layout_width="0dp"
                    android:layout_margin="@dimen/dimen_36dp"
                    android:layout_height="wrap_content" android:id="@+id/button6"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView75"
                    android:background="@drawable/curved_rectangle_theme"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
    <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="@+id/cardView2"
            app:layout_constraintBottom_toBottomOf="@+id/cardView2" android:id="@+id/space"/>
    <ImageView
            android:layout_width="@dimen/dimen_36dp"
            android:layout_height="@dimen/dimen_36dp"
            app:srcCompat="@drawable/cross_img"
            android:id="@+id/imageView12" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline21" app:layout_constraintGuide_begin="79dp"
                                                android:orientation="horizontal"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline22" app:layout_constraintGuide_begin="605dp"
                                                android:orientation="horizontal"/>
</androidx.constraintlayout.widget.ConstraintLayout>
