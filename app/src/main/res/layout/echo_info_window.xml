<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">


    <TextView
            android:text="jammel Deere "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/info_window_title"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline15" android:layout_marginStart="8dp"/>
    <TextView
            android:text="3434 Chonk Hill Roadd"
            android:layout_width="wrap_content"
            android:drawableStart="@drawable/location_pin_small"
            android:layout_height="wrap_content"
            android:drawablePadding="4dp"
            android:id="@+id/info_window_subtitle"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/info_window_title"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView16"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline15"/>
    <TextView
            android:drawableStart="@drawable/clock"
            android:text="10:30 PM"
            android:drawablePadding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView16"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/info_window_subtitle"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/guideline15"/>
    <TextView
            android:text="online"
            android:drawableLeft="@drawable/status_tick"
            android:layout_width="wrap_content"
android:drawablePadding="4dp"
            android:layout_height="wrap_content" android:id="@+id/textView17"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView16"
            app:layout_constraintStart_toEndOf="@+id/textView16" android:layout_marginStart="32dp"/>
    <TextView
            android:text="4"
            android:drawableStart="@drawable/star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView18"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline16"
            android:layout_marginEnd="8dp"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:id="@+id/guideline15"
                                                app:layout_constraintGuide_begin="20dp"
                                                android:orientation="vertical"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:id="@+id/guideline16"
                                                app:layout_constraintGuide_end="20dp"
                                                android:orientation="vertical"/>
</androidx.constraintlayout.widget.ConstraintLayout>